<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MerchantAddBranch">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLaddB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/desc"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/circle"
                            android:padding="10dp"
                            android:src="@drawable/location"
                            android:tint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:text="Add Branch"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageViewaddB"
                        android:contentDescription="@string/desc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/linearLaddB"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="-10dp"
                        android:rotation="45"
                        android:src="@drawable/square" />



                    <LinearLayout
                        android:id="@+id/container_linear2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/imageViewaddB"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="30dp"
                        >

                        <EditText
                            android:id="@+id/branchName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextstyle"
                            android:hint="Branch Name"
                            android:inputType="text"
                            android:textSize="15sp" />
                        <EditText
                            android:id="@+id/branchPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextstyle"
                            android:hint="Branch Phone"
                            android:inputType="phone"
                            android:layout_marginTop="10dp"
                            android:textSize="15sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location :"
                                android:textSize="17sp"
                                android:layout_weight="4"
                                android:layout_marginTop="12dp"
                                />

                            <ImageButton
                                android:id="@+id/PickLocation"
                                android:layout_width="70dp"
                                android:layout_height="50dp"
                                android:layout_weight="2"
                                android:layout_marginRight="20dp"
                                android:backgroundTint="@color/white"
                                app:srcCompat="@drawable/location"

                                />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="25 read Location"
                            android:textSize="12sp"
                            android:id="@+id/location"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            />
                        <EditText
                            android:id="@+id/branchPass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittextstyle"
                            android:hint="Branch Password"
                            android:inputType="textPassword"
                            android:layout_marginTop="15dp"
                            android:textSize="15sp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="reword System ?"
                            android:id="@+id/checkbox"
                            android:textSize="15sp"
                            android:layout_marginTop="10dp"
                            />

                        <Button
                            android:id="@+id/btn_addBranch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="30dp"
                            android:background="@color/colorPrimary"
                            android:fontFamily="sans-serif-medium"
                            android:text="Add Branch"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>